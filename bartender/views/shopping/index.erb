<main>
  <div class="shopping-list">
    <div class="title"><h1>Shopping List</h1>
      <div class="items">

        <% shopping_lists.each do |list| %>
          <% list.keys.each do |ingredient| %>
            <p><%= ingredient %></p>
          <% end %>

          <% list.values.each do |amount| %>
            <p><%= amount %></p>
          <% end %>
        <% end %>
      </div>
    </div>  
  </div>
</main>